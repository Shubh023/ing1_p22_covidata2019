<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.gridlayout.widget.GridLayout
        android:id="@+id/gridLayout"
        android:layout_width="350dp"
        android:layout_height="500dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="200dp"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="200dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/Case00"
            android:layout_width="116dp"
            android:layout_height="166dp"
            android:contentDescription="@string/case00"
            android:onClick="IncreaseScore"
            app:layout_column="0"
            app:layout_row="0"
            app:srcCompat="@drawable/covid" />

        <ImageView
            android:id="@+id/Case01"
            android:layout_width="116dp"
            android:layout_height="166dp"
            android:contentDescription="@string/case01"
            android:onClick="IncreaseScore"
            app:layout_column="1"
            app:layout_row="0"
            app:srcCompat="@drawable/covid" />

        <ImageView
            android:id="@+id/Case02"
            android:layout_width="116dp"
            android:layout_height="166dp"
            android:contentDescription="@string/case02"
            android:onClick="IncreaseScore"
            app:layout_column="2"
            app:layout_row="0"
            app:srcCompat="@drawable/covid" />

        <ImageView
            android:id="@+id/Case10"
            android:layout_width="116dp"
            android:layout_height="166dp"
            android:contentDescription="@string/case10"
            android:onClick="IncreaseScore"
            app:layout_column="0"
            app:layout_row="1"
            app:srcCompat="@drawable/covid" />

        <ImageView
            android:id="@+id/Case11"
            android:layout_width="116dp"
            android:layout_height="166dp"
            android:contentDescription="@string/case11"
            android:onClick="IncreaseScore"
            app:layout_column="1"
            app:layout_row="1"
            app:srcCompat="@drawable/covid" />

        <ImageView
            android:id="@+id/Case12"
            android:layout_width="116dp"
            android:layout_height="166dp"
            android:contentDescription="@string/case12"
            android:onClick="IncreaseScore"
            app:layout_column="2"
            app:layout_row="1"
            app:srcCompat="@drawable/covid" />

        <ImageView
            android:id="@+id/Case20"
            android:layout_width="116dp"
            android:layout_height="166dp"
            android:contentDescription="@string/case20"
            android:onClick="IncreaseScore"
            app:layout_column="0"
            app:layout_row="2"
            app:srcCompat="@drawable/covid" />

        <ImageView
            android:id="@+id/Case21"
            android:layout_width="116dp"
            android:layout_height="166dp"
            android:contentDescription="@string/case21"
            android:onClick="IncreaseScore"
            app:layout_column="1"
            app:layout_row="2"
            app:srcCompat="@drawable/covid" />

        <ImageView
            android:id="@+id/Case22"
            android:layout_width="116dp"
            android:layout_height="166dp"
            android:contentDescription="@string/case22"
            android:onClick="IncreaseScore"
            app:layout_column="2"
            app:layout_row="2"
            app:srcCompat="@drawable/covid" />


    </androidx.gridlayout.widget.GridLayout>

    <TextView
        android:id="@+id/TimerText"
        android:layout_width="112dp"
        android:layout_height="66dp"
        android:layout_marginStart="150dp"
        android:layout_marginTop="25dp"
        android:layout_marginEnd="150dp"
        android:layout_marginBottom="25dp"
        android:gravity="center"
        android:text="@string/time_10"
        android:textAlignment="center"
        android:textSize="24sp"
        app:layout_constraintBottom_toTopOf="@+id/gridLayout"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/ScoreText"
        android:layout_width="139dp"
        android:layout_height="80dp"
        android:layout_marginStart="135dp"
        android:layout_marginTop="11dp"
        android:layout_marginEnd="135dp"
        android:layout_marginBottom="24dp"
        android:gravity="center"
        android:text="Score : 0"
        android:textAlignment="center"
        android:textSize="30sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/gridLayout" />

</androidx.constraintlayout.widget.ConstraintLayout>